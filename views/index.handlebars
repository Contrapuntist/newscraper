{{#if articles}}
<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">The Intellectualist </h1>
        <h2 class="lead text-muted">News with an academia perspective</h2>
        <p>
            <a href="/refresh" class="btn btn-primary">Update Headlines</a> 
            <a href="/savedarticles" class="btn btn-primary">Saved Headlines</a>
        </p>
    </div>
</section>
<div class="container-fluid">
    <div class="row">
        <div class="card-deck">
        {{#each articles}}
            <div class="col-4 col-md-6 col-sm-12 col-xs-12 d-flex align-items-stretch mb-2">
                <div class="card">
                    {{!-- <img class="card-img-top" src="..." alt="Card image cap"> --}}
                    <h4 class="card-header"><i class="fa fa-newspaper-o fw" aria-hidden="true"></i>  {{this.title}}</h4>
                    <div class="card-body">
                        
                        {{#if this.byline}}
                        <p class="card-text">By {{this.byline}} </p>
                        {{/if}}
                        <p class="card-text"> {{this.summary}}</p>
                    </div>
                    <div class="card-footer .d-inline-flex">
                          <a class="btn btn-primary " href="{{this.link}}" target="_blank">Read Article</a> 
                          <button class="btn btn-primary savearticle" href="#" articleID="{{this.title}}"><i  class="fa fa-bookmark" aria-hidden="true"></i> Save</button>
                    </div>
                </div>
            </div>
        {{/each}}
        </div>
    </div>
</div> 
{{ else }} 
<div class="container-fluid">
    <div class="jumbotron text-center">
        <h1 class="jumbotron-heading">The Intellectualist </h1>
        <h2 class="lead text-muted">News with an academia perspective</h2>
        
        <h3>Uh oh. Don't fret. We don't have articles for you to read.</h3>
        <p>Click 'Get Headlines' button below and we'll find you something great to read from smart people.</p>
        <p>
            <a id="update" href="/scrape" class="btn btn-primary">Get Headlines</a>
        </p>
    </div>
</div>
{{/if}}
